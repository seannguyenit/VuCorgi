@model MainLibrary.Entity.WebCenter.Task_Type

@{
    ViewBag.Title = "TypeDetails";
    Layout = "~/Views/Shared/BE_Layout/_LayoutBE.cshtml";
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

<!-- MAIN CONTENT -->
<div id="content">

    <!-- widget grid -->
    <section id="widget-grid" class="">

        <!-- START ROW -->
        <div class="row">
            <!-- NEW COL START -->
            <article class="col-sm-12">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget" id="wid-id-4" data-widget-editbutton="false" data-widget-custombutton="false">
                    <!-- widget options:
                        usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                        data-widget-colorbutton="false"
                        data-widget-editbutton="false"
                        data-widget-togglebutton="false"
                        data-widget-deletebutton="false"
                        data-widget-fullscreenbutton="false"
                        data-widget-custombutton="false"
                        data-widget-collapsed="true"
                        data-widget-sortable="false"

                    -->
                    <header>
                        <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
                        <h2>Details </h2>
                    </header>
                    <!-- widget div-->
                    <div>
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body no-padding">
                            <form id="smart-form-register" action="@Url.Action("SaveTask_Type", "Task")" method="POST" class="smart-form">
                                @Html.ValidationBootstrap()
                                @*<input type="hidden" name="BusinessId" value="@entity.Id" />*@
                                @Html.HiddenFor(m => m.Id)
                                <header>
                                    @Model.Name
                                </header>
                                <fieldset>
                                    <section>
                                        <label class="input">
                                            <i class="icon-append fa fa-file-text"></i>
                                            @*<input type="text" name="Title" id="Title" placeholder="Title" value="@entity.Title">*@
                                            @Html.TextBoxFor(m => m.Name, new { @placeholder = "Title" })
                                            <b class="tooltip tooltip-bottom-right">Needed to enter the tittle</b>
                                        </label>
                                    </section>

                                </fieldset>
                                <fieldset>
                                    <section>
                                        <label class="checkbox">
                                            @*<input type="checkbox" name="isEnable" id="IsEnable" checked="@entity.IsEnable">*@
                                            @Html.CheckBoxFor(m => m.IsActive)
                                            <i></i>Enable
                                        </label>
                                    </section>
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary">
                                        Save
                                    </button>
                                </footer>
                            </form>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->

            </article>
            <!-- END COL -->
        </div>
        <!-- END ROW -->
    </section>
    <!-- end widget grid -->

</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
    <script type="text/javascript">
        // DO NOT REMOVE : GLOBAL FUNCTIONS!

        $(document).ready(function () {

            var $registerForm = $("#smart-form-register").validate({

                // Rules for form validation
                rules: {
                    Name: {
                        required: true
                    }
                },

                // Messages for form validation
                messages: {
                    Name: {
                        required: 'Please enter Name'
                    }
                },

                // Do not change code below
                errorPlacement: function (error, element) {
                    error.insertAfter(element.parent());
                }
            });
        })</script>
}