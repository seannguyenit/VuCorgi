@model MainLibrary.Entity.WebCenter.Banner[]
@{
    var entity = Model ?? new Banner[0];
}
<!--========== SLIDER ==========-->
<div>
    <!-- END nav -->
    <section id="trang_chu"></section>
    <div id="carouselExampleIndicators" class="carousel slide">
        <ol class="carousel-indicators">
            @{
                for (int i = 0; i < entity.Length; i++)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    }
                }
            }

        </ol>

        <!-- carousel content -->
        <div class="carousel-inner">
            @{
                for (int i = 0; i < entity.Length; i++)
                {
                    if (entity[i] != null)
                    {

                        if (i == 0)
                        {
                            <!-- first slide -->
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="@entity[i].FilePath" alt="First slide">
                                @*<div class="carousel-caption d-md-block">
                                    <div class="ftco-cover">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <h1 class="ftco-heading" data-animation="animated bounceInLeft"> @entity[i].Title </h1>
                                                <h2 class="h5 ftco-subheading mb-5 ftco-animate"> @entity[i].Description </h2>
                                                <a href="@entity[i].TargetUrl" class="btn btn-outline-white btn-lg" data-animation="animated zoomInUp">Chi tiết</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>*@
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="@entity[i].FilePath" alt="Second slide">
                                @*<div class="carousel-caption d-md-block">
                                    <div class="carousel-caption d-md-block">
                                        <div class="ftco-cover">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h1 class="ftco-heading" data-animation="animated bounceInLeft"> @entity[i].Title </h1>
                                                    <h2 class="h5 ftco-subheading mb-5 ftco-animate"> @entity[i].Description </h2>
                                                    <a href="@entity[i].TargetUrl" class="btn btn-outline-white btn-lg" data-animation="animated zoomInUp">Chi tiết</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>*@
                                <!-- second slide content -->
                            </div>
                        }
                        <!-- second slide -->

                    }

                }
            }
        </div>

        <!-- controls -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev"> <span class="carousel-control-prev-icon" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a> <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next"> <span class="carousel-control-next-icon" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
    </div>
</div>
