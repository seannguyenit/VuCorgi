@model MainLibrary.Entity.WebCenter.News

@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Views/Shared/FE_Layout/_LayoutFE.cshtml";
}

<section id="chitiet">
    <div class="container">
        <div class="col-md-12 col-lg-12">
            <div class="row">
                <div class="chitiet_contain text-left">
                    <div class="chitiet_title">
                        @Model.Title
                    </div>
                    <div class="chitiet_description">
                        @Html.Raw(Model.Description)
                    </div>
                    <div class="chitiet_description">
                        @Html.Raw(Model.Content)
                    </div>
                    <div class="chitiet_album">
                        @{
                            foreach (var child in Model.LstImg)
                            {
                                <img src="@child.FEPath" />
                            }
                        }
                    </div>
                </div>
            </div>
           
                <hr />
                <div class="row">
                    <div class="chitiet_title" style="text-align:left">
                        Sản phẩm khác
                    </div>
                    <div class="tintuc_contain">
                        @foreach (var item in ViewBag.Related)
                        {
                            <div class="tintuc_relatedPro">
                                <a href="@Url.Action("Chitiet", "News", new { id = item.Id })">
                                    <img src="@item.FEPath" class="tintucrelatedImg" />
                                </a>
                                <div class="tintucrelatedPro_contain">
                                    <div class="tintucrelatedPro_title">
                                        <a href="@Url.Action("Chitiet", "News", new { id = item.Id })">@item.Title</a>
                                    </div>
                                    <div class="tintuc_description">
                                        @item.Description
                                    </div>
                                    @*<div class="relatedPro_date">
                                            @(item.CreatedDate.ToString("dd/MM/yyyy"))
                                        </div>*@
                                </div>
                            </div>
                        }
                    </div>
                </div>
            
