@model MainLibrary.Entity.WebCenter.Customer_Feedback[]
<div class="container">
    <div class="row">
        <div class="col-md-12 text-center mb-5 ftco-animate">
            <h2 class="display-4">Cảm nhận của khách hàng</h2>
        </div>
        <div class="col-md-12">
            <div id="carouselExampleIndicators1" class="carousel slide" data-ride="carousel" style="background-color: transparent">
                <ol class="carousel-indicators">
                    @{
                        for (int i = 0; i < Model.Length; i++)
                        {
                            if (Model[i] != null)
                            {
                                if (i == 0)
                                {
                                    <li data-target="#carouselExampleIndicators1" data-slide-to="@i" class="active"></li>
                                }
                                else
                                {
                                    <li data-target="#carouselExampleIndicators1" data-slide-to="@i"></li>
                                }
                            }
                        }
                    }

                </ol>
                <div class="carousel-inner" role="listbox">
                    @{
                        for (int i = 0; i < Model.Length; i++)
                        {
                            if (Model[i] != null)
                            {
                                if (i == 0)
                                {
                                    <div class="carousel-item active">
                                        <div class="div_feedback_slide">
                                            <div class="div_feedback_contain">
                                                <div class="div_feedback_img">
                                                    <img alt="@Model[i].Title" src="@Model[i].FEPath" style="width:100%; height:100% !important;opacity:unset !important">
                                                </div>
                                                <div class="div_feedback_text">
                                                    <div class="div_feedback_title">
                                                        <p class="div_feedback_highlight">@Model[i].Title</p>
                                                        <p>@Model[i].Content</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <div class="div_feedback_slide">
                                            <div class="div_feedback_contain">
                                                <div class="div_feedback_img">
                                                    <img alt="@Model[i].Title" src="@Model[i].FEPath" style="width:100%; height:100% !important">
                                                </div>
                                                <div class="div_feedback_text">
                                                    <div class="div_feedback_title">
                                                        <p class="div_feedback_highlight">@Model[i].Title</p>
                                                        <p>@Model[i].Content</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators1" role="button" data-slide="prev"> <span class="carousel-control-prev-icon prevIconBack" aria-hidden="true"></span> <span class="sr-only">Previous</span> </a> <a class="carousel-control-next" href="#carouselExampleIndicators1" role="button" data-slide="next"> <span class="carousel-control-next-icon prevIconNext" aria-hidden="true"></span> <span class="sr-only">Next</span> </a>
            </div>
        </div>
    </div>
</div>

